<div class="form">
  <%= form_with(model: [:admin, @user], local: true) do |f| %>

    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "個のエラーがあります") %></h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </h2>
      </div>
    <% end %>

    <div class="user_form">
      <div class="field">
        <%= f.label :名前 %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email %>
      </div>

      <% if params[:id].nil? %>
        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password %>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :パスワード再確認 %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="field">
        <%= f.label :admin %>
        <%= f.check_box :admin %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "アカウントを作成する" %>
      <%= link_to 'タスク一覧へ', tasks_path %>
    </div>
  <% end %>
</div>
