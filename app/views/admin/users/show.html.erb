<div class="container">
  <div class="user-show">
    <div class="form-wrapper">
      <h1>ユーザー詳細</h1>
      <div class="user-info">
        <ul>
          <li class="info-title">名前</li>
          <li><%= @user.name %></li>
        </ul>
        <ul>
          <li class="info-title">内容</li>
          <li><%= @user.email %></li>
        </ul>
        <ul>
          <li class="info-title">管理者権限</li>
          <li><%= @user.admin %></li>
        </ul>
        <ul>
          <li class="info-title">タスク数</li>
          <li><%= @user.tasks.count %></li>
        </ul>
      </div>

      <div class="form-footer">
        <%= link_to "編集", edit_admin_user_path %>
        <%= link_to "一覧へ戻る", admin_users_path %>
      </div>
    </div>

    <div class="index-box">
      <% unless @user.tasks.empty? %>
        <table border="1">
          <tr>
            <th id="title">タイトル</th>
            <th id="content">内容</th>
            <th id="deadline">終了期限</th>
            <th id="status">ステータス</th>
            <th id="priority">優先順位</th>
          </tr>

          <% @user.tasks.each do |task| %>
            <tr>
              <td><%= task.title %></td>
              <td><%= task.content %></td>
              <td><%= task.deadline %></td>
              <td><%= task.status %></td>
              <td><%= task.priority %></td>
            </tr>
          <% end %>
        </table>
      <% else %>
        <p>タスクはありません</p>
      <% end %>
    </div>
  </div>
</div>
