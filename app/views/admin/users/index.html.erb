<div class="container">
  <div class="task-index">
    <h1>ユーザー一覧</h1>

    <div class="task-menus">
      <%= link_to "ユーザー登録", new_admin_user_path ,class: "new_task_btn" %>
    </div>

    <table border="1">
      <tr>
        <th id="name">名前</th>
        <th id="email">メールアドレス</th>
        <th id="admin">管理者権限</th>
        <th id="created">作成日時</th>
        <th id="updated">更新日時</th>
        <th id="count_tasks">タスク登録数</th>
        <th id="task-menu" colspan="3">メニュー</th>
      </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin %></td>
          <td><%= user.created_at %></td>
          <td><%= user.updated_at %></td>
          <td><%= user.tasks.count %></td>

          <td>
            <%= link_to admin_user_path(user.id), method: :get %>
            <%= link_to edit_admin_user_path(user.id), method: :get %>
            <%= link_to admin_user_path(user), method: :delete, data: { confirm: '本当に削除してもいいですか?' } %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= paginate @users %>
  </div>
</div>
