<!DOCTYPE html>
<html>
  <head>
    <title>EveryLeafExam</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul class="top_menu clearfix">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <%= link_to "ユーザー管理", admin_users_path %>
          <% end %>
          <li><%= link_to "まいタスク", tasks_path, class: 'btn btn-default' %></li>
          <li><%= link_to "タスク一覧", tasks_path, class: 'btn btn-default' %></li>
          <li><%= link_to "タスク登録", new_task_path, class: 'btn btn-default' %></li>
          <li><%= link_to "マイページ", user_path(current_user.id), class: 'btn btn-default' %></li>
          <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete, class: 'btn btn-default' %></li>
        <% else %>
          <li><%= link_to "まいタスク", tasks_path, class: 'btn btn-default' %></li>
          <li><%= link_to "タスク一覧", tasks_path, class: 'btn btn-default' %></li></button>
          <li><%= link_to "アカウント作成", new_user_path, class: 'btn btn-default' %></li></button>
          <li><%= link_to "ログイン", new_session_path, class: 'btn btn-default' %></li></button>
        <% end %>
      </ul>
    </header>
    <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name %>">
      <%= msg.html_safe %>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
