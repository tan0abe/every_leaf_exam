<h2>タスク作成画面</h2>
<%= form_with(model: @task, local: true) do |f| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "個のエラーがあります") %></h2>
        <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li>・<%= message %></li>
        <% end %>
        </ul>
      </h2>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :タスク名 %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :タスク詳細 %>
    <%= f.text_area :content %>
  </div>

  <%= f.submit "タスクを登録する" %>
<% end %>

<%= link_to 'タスク一覧へ', tasks_path %>
