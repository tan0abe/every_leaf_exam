<h2>タスク一覧</h2>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<table>
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
    <th>優先度</th>
    <th>状態</th>
    <th>終了期限</th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.priority %></td>
      <td><%= task.status %></td>
      <td><%= task.deadline %></td>
      <td><%= link_to 'タスクの詳細', task_path(task.id) %></td>
      <td><%= link_to 'タスクの編集', edit_task_path(task.id) %></td>
      <td><%= link_to 'タスクの削除', task_path(task.id), method: :delete, data: {confirm: "削除していいですか？" } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'タスクを作成する', new_task_path %>
